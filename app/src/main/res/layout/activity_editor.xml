<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EditorActivity">
    <TextView
            android:text="Car Brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textCarBrand"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="62dp"
            app:layout_constraintHorizontal_bias="0.085" android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"/>
    <TextView
            android:text="CarModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textCarModel"
            app:layout_constraintTop_toBottomOf="@+id/textCarBrand"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>
    <TextView
            android:text="Year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textYear"
            app:layout_constraintTop_toBottomOf="@+id/textCarModel"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="60dp" android:layout_marginStart="60dp"/>
    <TextView
            android:text="Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textPrice"
            app:layout_constraintTop_toBottomOf="@+id/textYear"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="56dp" android:layout_marginStart="56dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editCarBrand"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp" app:layout_constraintStart_toEndOf="@+id/textCarBrand"
            android:layout_marginLeft="17dp" android:layout_marginStart="17dp" android:textSize="16sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editCarModel"
            app:layout_constraintStart_toEndOf="@+id/textCarModel" android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp" app:layout_constraintTop_toBottomOf="@+id/editCarBrand"
            android:layout_marginTop="12dp" android:textSize="16sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editYear"
            app:layout_constraintStart_toEndOf="@+id/textYear" android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp" android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/editCarModel" android:layout_marginTop="5dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/editPrice"
            app:layout_constraintStart_toEndOf="@+id/textPrice" android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp" android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/editYear" android:layout_marginTop="5dp"/>
    <Button
            android:text="Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonAdd"
            app:layout_constraintTop_toBottomOf="@+id/editPrice"
            android:layout_marginTop="80dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="72dp" android:layout_marginStart="72dp"/>
    <Button
            android:text="@android:string/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonCancel"
            app:layout_constraintTop_toBottomOf="@+id/editPrice"
            android:layout_marginTop="80dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="72dp"
            android:layout_marginRight="72dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>