<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/rv"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:clickable="true" app:srcCompat="@drawable/ic_add_black_24dp"
            android:id="@+id/floatingActionButton"
            app:backgroundTint="@color/design_default_color_background" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp" app:fabSize="auto"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:clickable="true" app:srcCompat="@android:drawable/ic_menu_sort_by_size"
            android:id="@+id/floatingActionButton2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            android:visibility="visible"/>


</androidx.constraintlayout.widget.ConstraintLayout>