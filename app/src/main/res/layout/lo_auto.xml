<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="CarBrand :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView1"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="12dp" android:layout_marginTop="52dp" android:layout_marginStart="12dp"
            android:textSize="18sp"/>
    <TextView
            android:text="CarModel : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="52dp"
            app:layout_constraintStart_toEndOf="@+id/textView1" android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp" android:textSize="18sp"/>
    <TextView
            android:text="Year :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginLeft="12dp" android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="52dp" android:textSize="18sp"/>
    <TextView
            android:text="Price :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="52dp" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginLeft="12dp" android:layout_marginStart="12dp" android:textSize="18sp"/>
    <Button
            android:text="update"
            android:layout_width="61dp"
            android:layout_height="35dp" android:id="@+id/btnUpdate"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"/>
    <Button
            android:text="delete"
            android:layout_width="60dp"
            android:layout_height="35dp" android:id="@+id/btnDelete"
            app:layout_constraintTop_toBottomOf="@+id/btnUpdate"
            android:layout_marginTop="20dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp" app:srcCompat="@drawable/dotted_line" android:id="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/btnDelete" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>